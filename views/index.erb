<!doctype html>
<html>
  <head>
    <title>Holiday Search</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
  </head>
  <body class=".container">
  	<form>

  		<p>Select Country: United States, Great Britin, or Canada</p>
  		<select name="country" class="form-control">
  			<% ["us", "gb", "ca"].each do |country| %>
  				<option <% if params['country'] == country %> <%= selected="selected" %> <% end %> value="<%= country %>">
  					<%= country %>
  				</option>
  			<% end %>
		</select>
		<p>Enter month (ie. March)</p>
  		<input name="month" type="month" value="<%= params['month'] %>">
	  <button type="submit">Search</button>
	</form>
	<% if @holidays.any? %>
	  	<ol>
	  		<% @holidays.each do |holiday| %>
	  			<% holiday.each do |h| %>
	  				<li>
	  					<%= h["name"] %>
	  				</li>
	  			<% end %>
	  		<% end %>
	  	</ol>
	  </div>

	<% else %>
	<% end %>
  </body>
</html>